
        var nameField = document.getElementById('name');
        var dobField = document.getElementById('dob');
        var addressField = document.getElementById('address');
        var emailField = document.getElementById('email');
        var passwordField = document.getElementById('password');
        var phoneField = document.getElementById('phone');

        // only letters in name
        var namePattern = /^[A-Za-z ]+$/;
        if (!namePattern.test(nameField.value)) {
            alert('Name should contain only alphabets.');
            nameField.value = '';
            return false;
        }

        // atleast 8 characters long password
        if (passwordField.value.length < 8) {
            alert('Password should be at least 8 characters long.');
            return false;
        }

        // phone number should be 10 digits and only numeric
        var phonePattern = /^\d{10}$/;
        var phonePattern2 = /^[0-9]+$/;

        if (!phonePattern2.test(phoneField.value)) {
            alert('Phone number should contain only numeric characters (0-9).');
            phoneField.value = '';
            return false;
        }
        if (!phonePattern.test(phoneField.value)) {
            alert('Phone number should be 10 digits long.');
            return false;
        }

        //once all validations pass, we proceed with form submission